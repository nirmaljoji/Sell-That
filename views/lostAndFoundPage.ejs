  <div class="page-wrapper">
    <div class="headpart">

      <h2 id="found">Found items near you</h2>
      <button class=" btn float-right postBtn" id="postbtn">Your items</button>
      <div id="postItemModal" class=modal>
        <div class="modal-content">
          <span class="close">&#10005;</span>
          <div class="tab">
            <button class="tablinks" onclick="openTab(event,'tab1')">Post an item you found</button>
            <button class="tablinks" onclick="openTab(event,'tab2')">Previous items</button>
          </div>

          <div id="tab1" class="tabcontent">
            <h4>Fill in the details</h4>
            <h6>Please add the information for other students to view before submitting the item to the Admin
              Department.</h6>
              <br>
            <div class="formDiv">
              <form action="">
                <label for="fname">Item name</label>
                <input type="text" id="fname" required name="firstname" placeholder="Item name">

                <label for="lname">Found in</label>
                <input type="text" id="lname" required name="lastname" placeholder="Location found">

                <label for="details">Note</label>
                <input type="text" id="details" name="details" placeholder="Add any relevant details..">

                <hr>

                <div>
                  <label for="upload" class="uploadButton">Upload image</label>
                  <input type="file" name="upload" id="upload">
                </div>
    
                <br>

                <input type="submit" value="Submit" onclick="lostFoundForm()">
              </form>
            </div>
          </div>

          <div id="tab2" class="tabcontent">

            <div class="prev">
              <h5>Debit Card</h5>
              <p>Found near reception</p>
              
              <button class="btn btn-primary del">&#10005;</button>
            </div>
            <div class="prev">
              <h5 >Helmet</h5>
              <p>Found in class</p>

              <button class="btn btn-primary del">&#10005;</button>
            </div>

          </div>

          <div id="tab2" class="tabcontent">
            <p>prev</p>

          </div>
        </div>
      </div>
      <hr class="headLine">
    </div>


    <div class="cards">

      <div class="card">
        <div class="card__image-holder">
          <img class="card__image img-fluid" src="/img/lost/keys.jpg" alt="wave" />
        </div>
        <div class="card-title">

          <span class="left"></span>
          <span class="right"></span>
          </a>
          <h2>
            Scooty keys
            <small>Found on 4th floor</small>
          </h2>
        </div>
        <div id="descBox">
          <div class="card-description">
            I found them near the girls' lockers outside the library.
          </div>
          <div class="">
            <p class="demo"></p>
            <div class="readmore">
              <a class="btn">Contact</a>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card__image-holder">
          <img class="card__image img-fluid" src="/img/lost/earp.jpg" alt="wave" />
        </div>
        <div class="card-title">

          <span class="left"></span>
          <span class="right"></span>
          </a>
          <h2>
            Earphones
            <small>Found near two wheeler parking</small>
          </h2>
        </div>
        <div id="descBox">
          <div class="card-description">
            Inside the boys' hostel compound.. found near a bench.
          </div>
          <div class="">
            <p class="demo"></p>
            <div class="readmore">
              <a class="btn">Contact</a>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card__image-holder">
          <img class="card__image img-fluid" src="/img/lost/wallet.jpg" alt="wave" />
        </div>
